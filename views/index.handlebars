


<div class="container-fluid">
            <div class="row" style="background-color: white">
            <h1 class="text-center">In and Out Buger: Order Here</h1>
            </div>
    <br>

            <div class="row text-center"> 
            <form method="POST" action="/burgers/insertOne" class="form-inline">
            <div class="form-group">
                <input type="hidden" name="devoured" value="0"/>
                <input name="burger" type="text" class="form-control" id="burger-input" placeholder="Enter Order Here"/>
            </div>
            <button type="submit" class="btn btn-primary id="submit" btn-sm">Submit</button>

           
        <button type="button" class="btn btn-default btn-sm"><a href="/screenshots"> Screenshots</a></button>
             
            </form>
            </div>
    <br>


<div class="row text-center">
        <div class="col-xs-6 float-right" >
            <div class="panel panel-default">
                <div class="panel-heading">Your Order</div>
                <div id="burgers-added" class="panel-body">
                    <hr>
                    {{#each burgers}}
                        {{#unless devoured}}
                            <form method="POST" action="/burgers/updateOne/{{id}}?_method=PUT" class="form-inline">
                                <div class="form-group">
                                    <input type="hidden" name="devoured" value="1"/>
                                    <p class="form-control-static">{{ burger_name }}</p>
                                </div>
                                <button id="burger-id{{id}}" type="submit" class="btn btn-default btn-sm">
                               
                                <span class="glyphicon glyphicon-arrow-right"></span> Place Order!</button>
                                <hr>
                            </form>
                        {{/unless}}
                    {{/each}}

                </div>
            </div>
        </div>
        <div class="col-xs-6 float-left">
            <div class="panel panel-default">
                <div class="panel-heading">Burger Queue</div>
                <div id="burgers-devoured" class="panel-body">
                     <hr>

                  {{#each burgers}}
                {{#if devoured}}
                            <form method="POST" action="/burgers/delete/{{id}}?_method=DELETE" class="form-inline">
                                <div class="form-group">
                                    <label class="sr-only">Burger Order Queue</label>
                                    <p class="form-control-static">{{ burger_name }}</p>
                                </div>
                                <button id="burger-id{{id}}" type="submit" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-arrow-up"></span>Order Up!</button>
                                <hr>
                            </form>
                        {{/if}}
                    {{/each}}

                </div>

                
            </div>
        </div>

        
    </div>

    

</div>



